<launch>
	<arg name="cam0_pose" default="0 0 0 0 0 0"/>
	<arg name="cam1" default="0"/>
	<arg name="cam2" default="0"/>
	<arg name="cam3" default="0"/>
	<arg name="cam4" default="0"/>
	<arg name="cam5" default="0"/>
	
	<node 
		pkg="more_t2" 
		type="camera_pose_calibration" 
		name="cam0" 
		output="screen" 
		
		required="true"		
	>
		<param name="id" value="0" type="int"/>
		<param name="pose" value="$(arg cam0_pose)" type="str"/>
	</node>
	
	<node if="$(arg cam1)" 
		pkg="more_t2" 
		type="camera_pose_calibration" 
		name="cam1" 
		output="screen" 
		launch-prefix="xterm -e"
	>
		<param name="id" value="1" type="int"/>
	</node>
	
	
	<node if="$(arg cam2)" 
		pkg="more_t2" 
		type="camera_pose_calibration" 
		name="cam2" 
		output="screen" 
		launch-prefix="xterm -e"
	>
		<param name="id" value="2" type="int"/>
	</node>
	
	<node if="$(arg cam3)" 
		pkg="more_t2" 
		type="camera_pose_calibration" 
		name="cam3" 
		output="screen" 
		launch-prefix="xterm -e"
	>
		<param name="id" value="3" type="int"/>
	</node>
	
	<node if="$(arg cam4)" 
		pkg="more_t2" 
		type="camera_pose_calibration" 
		name="cam4" 
		output="screen" 
		launch-prefix="xterm -e"
	>
		<param name="id" value="4" type="int"/>
	</node>
	
	<node if="$(arg cam5)" 
		pkg="more_t2" 
		type="camera_pose_calibration" 
		name="cam5" 
		output="screen" 
		launch-prefix="xterm -e"
	>
		<param name="id" value="5" type="int"/>
	</node>
	
</launch>

