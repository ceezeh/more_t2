<launch>
	<arg name="cam0_pose" default="0 0 0"/>
	<arg name="cam1" default="0"/>
	<arg name="cam2" default="0"/>
	<arg name="cam3" default="0"/>
	<arg name="cam4" default="0"/>
	<arg name="cam5" default="0"/>
	<arg name="max_no_of_cams" default="6"/>
	<node 
		pkg="more_t2" 
		type="more_t2" 
		name="pose_gen" 
		output="screen" 
		required="true"		
	>
		<param name="cam0" value="$(arg cam0)" type="int"/>
		<param name="cam1" value="$(arg cam1)" type="int"/>
		<param name="cam2" value="$(arg cam2)" type="int"/>
		<param name="cam3" value="$(arg cam3)" type="int"/>
		<param name="cam4" value="$(arg cam4)" type="int"/>
		<param name="cam5" value="$(arg cam5)" type="int"/>
	</node>
 
